<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="css/style.css">
	<title>Matcha</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
	<div class="main_wrapper">
		<!-- Header -->

		{% block navbar %}
			<script type='text/javascript' src='javascript/scripts.js'></script>
			<link rel="shortcut icon" href="favicon.ico">

			<!-- This is the header section -->
			<div id="header_wrapper">
				<img id="logo" src="page_imgs/logo.png" />
				<a id="name">Matcha</a>

				<div id="login_stuff">
					<a>Logged in as: {{base.username}}</a>
					{% if base.loggedin %}
						<a><button onclick="logOut();">Log Out</button></a>
					{% endif %}
				</div>
			</div>

			<!-- This is the menubar -->		
			<div class="menu_bar">
				<ul>
					<li><a href="index.php">Home</a></li>
					<li><a href="#">Search</a></li>
					<li><a href="chat.php">Chat</a></li>

					{% if base.loggedin %}
						<li><a href='adjust.php'>My Account</a></li>
						<li><a href='notifications.php' id="notifications">
							Notifications({{base.notifications}})
						</a></li>

						<script type='text/javascript' src='javascript/header.js'></script>
					{% else %}
						<li><a href='register.php'>Register</a></li>
						<li><a href='login.php'>Login</a></li>
					{% endif %}

				</ul>
			</div>
		{% endblock %}		







		<div class="content_wrapper">
			<!-- Main content -->
			<div id="items">
				{% block body %}
				
				{% endblock %}






			</div>
			<!-- End main contents -->
			<!-- Sidebar -->
			{% block sidebar %}
			<div id="side_bar">
				<div id="categories_title">Cool links</div>
					<ul id="cat_list">

					{% if base.loggedin %}
						<li><a href="profile.php?usr_id={{base.uid}}">My Profile</a></li>
						<li><a href="notifications.php">Views and likes</a></li>
						<li><a href="chat.php">Chats</a></li>
					{% else %}
						<a>Log in to see fancy links</a>
					{% endif %}

					</ul>
				<div class="padding"></div>
			</div>
			{% endblock %}			
			<div id="clear"></div>
		</div>
	</div>

	<div>
	{% block footer %}
		<div id="footer">Copyright matcha</div>
	{% endblock %}
	</div>
</body>
</html>